//projects
.projects {
    width: 100%;
}

.projects-list {
    border()
    width: 100%;
    display: flex;
    flex-wrap: wrap;

    > .heading-lv1 { margin: 30px 0; }
}

.project {
    border()
    width: calc(50% - 10px);
    background-color: #fff;
    display:flex;
    flex-wrap: wrap;
    padding: 10px;
    margin: 5px;
}

@media (max-width: 500px){
    .project {
        width: calc(10d0% - 10px);
    }
}

.project-name {
    color: secondary-color;
    margin:0;
    font-weight: 300;
}

.project-star {
    display:flex;
    align-items:center;
    margin-left: auto;
}
.project-star-count {
    color: secondary-color;
    margin-left: 5px;
}

.project-description {
    color: secondary-color;
    width: 100%;
    margin:10px 0 0 0;
}
