/* colors */
highlight-color = #ff0066
secondary-color = #212121
bg-color = #333

/* dev mode */
border()
    border: 1px dashed;

/* box model */
* {
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
}

// global style

html, body {
    height 100%;
}

body {
    display: flex;
    flex-direction: column;
    background-color: bg-color;
    font-weight: 300;
}

// containers 

.main {
    flex: 1;
}

.container {
    border()
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
}

.container-center {
    display: flex;
    justify-content: center;
    align-items: center;
}

//texts 

.heading-lv1 {
    color: #fff;
    font-family: 'lobster', cursive;
    font-size: 50px;
    margin: 5px;
    font-weight: 100;
    width: 100%;
}

.paragraph {
    color: #fff;
}

//icons
.star-icon,
.icon-heart {
    fill: highlight-color;
}
